<div class="container">


  <%= form_with model: @contact, :data => {:turbo => "false"} do |form| %>
   <%= render 'shared/error_messages', resource: @contact %>

    <%= form.invisible_captcha :nickname %>

    <div class="field form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label :message %>
      <%= form.text_area :message, size: "70x5", class: "form-control" %>
    </div>
    <br>
    <div class="actions">
      <%= form.submit "Send Request", class: "btn btn-outline-dark" %>
    </div>
  <% end %>
</div>
