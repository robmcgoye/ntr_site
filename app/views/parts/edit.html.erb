<div class="container pb-3">
<h3><%= "Page: #{ @part.page.name } Part: #{ @part.name.capitalize }" %></h3>
<%= form_with(model: @part, :data => {:turbo => "false"}) do |form| %>
  <%= render "shared/error_messages", resource: @part %>

  <div class="field form-group">
    <%= form.text_area :content, class: "tinymce", rows: 20 %>
    <%= tinymce %>
  </div>

  <div class="actions pt-2">
    <%= form.submit "Update", class: "btn btn-sm btn-outline-secondary" %>
  </div>
<% end %>
</div>
